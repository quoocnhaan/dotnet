@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Categories</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Category</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Products</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>@(category.Products?.Count() ?? 0)</td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No categories found.
        </div>
    }
</div>
